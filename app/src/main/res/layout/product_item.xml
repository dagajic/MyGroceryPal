<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin_in_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/productNameLayout">
        <TextView
            style="@style/EditTextWhite"
            android:id="@+id/productName"
            tools:text="Product name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/productNameLayout">

        <TextView
            style="@style/EditTextWhite"
            android:layout_width="0dp"
            android:id="@+id/productPrice"
            tools:text="Price"
            android:layout_weight=".3" />

        <ImageButton
            style="@style/ButtonQuantity"
            android:id="@+id/btnGroceryDecreaseAmount"
            android:layout_width="0dp"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:layout_weight=".2" />

        <EditText
            style="@style/EditTextWhite"
            android:gravity="center"
            android:id="@+id/productQuantity"
            android:layout_width="0dp"
            android:layout_weight=".3"/>

        <ImageButton
            style="@style/ButtonQuantity"
            android:id="@+id/btnGroceryIncreaseAmount"
            android:layout_width="0dp"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_weight=".2"/>

    </LinearLayout>




</RelativeLayout>

