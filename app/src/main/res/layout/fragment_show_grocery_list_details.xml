<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/colorOfHeaderGroceryDetails"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/default_margin_in_app"
            android:padding="@dimen/small_margin_in_app">

            <TextView
                android:id="@+id/storenameGroceryDetails"
                style="@style/TextViewGroceryListItem"
                android:text="@string/storeSemicolon"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                style="@style/TextViewGroceryListItem"
                android:id="@+id/priceGroceryDetails"
                android:text="@string/price"/>

            <TextView
                style="@style/TextViewGroceryListItem"
                android:id="@+id/commisionGroceryDetails"
                android:text="@string/commison"/>

            <TextView
                style="@style/TextViewGroceryListItem"
                android:id="@+id/firstnameGroceryDetails"
                android:text="@string/delivererSemicolon"/>

            <TextView
                style="@style/TextViewGroceryListItem"
                android:id="@+id/contactGroceryDetails"
                android:text="@string/contactSemicolon"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="@dimen/default_margin_in_app"
        android:padding="@dimen/small_margin_in_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listOfItemsGroceryDetails"
        android:layout_weight="1"
        ></android.support.v7.widget.RecyclerView>

    <Button
        style="@style/ButtonLightBlue"
        android:text="@string/repeatCaps"
        android:id="@+id/againCommitbtn" />

</LinearLayout>