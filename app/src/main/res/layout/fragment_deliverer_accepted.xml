<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/MatchBoth">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_accepted"
        android:layout_margin="@dimen/small_margin_in_app"
        style="@style/MatchBoth">

        <LinearLayout
            style="@style/WrapHeightMatchWidth"
            android:layout_margin="@dimen/default_margin_in_app"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noneDelivererAcceptedGL"
                style="@style/WrapHeightMatchWidth"
                android:visibility="gone"
                android:layout_margin="@dimen/default_margin_in_app"
                android:text="@string/delivererAcceptedGLMessage"
                android:textAlignment="center"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/grocery_lists_accepted"
                style="@style/MatchBoth"/>
        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>