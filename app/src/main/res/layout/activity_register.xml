<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonBackToLogin"
            style="@style/MyButton"
            android:text="@string/back"/>

        <Button
            android:id="@+id/buttonRegister"
            style="@style/MyButton"
            android:text="@string/register"/>

    </LinearLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons"
        android:background="@drawable/shape_linear_layout"
        android:layout_margin="10dp"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/firstnameRegistration"
                style="@style/MyEditText"
                android:hint="@string/firstname"/>

            <EditText
                android:id="@+id/lastnameRegistration"
                android:hint="@string/lastname"
                style="@style/MyEditText" />

            <EditText
                android:id="@+id/usernameRegistration"
                style="@style/MyEditText"
                android:hint="@string/username" />

            <EditText
                android:id="@+id/passwordRegistration"
                style="@style/MyEditText"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/repeatPasswordRegistration"
                style="@style/MyEditText"
                android:hint="@string/repeatPassword"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/emailRegistration"
                style="@style/MyEditText"
                android:hint="@string/email"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/addressRegistration"
                style="@style/MyEditText"
                android:hint="@string/address" />

            <TextView
                android:id="@+id/txtCity"
                style="@style/MyEditText"
                android:hint="@string/city" />

            <TextView
                android:id="@+id/dateOfBirthRegistration"
                style="@style/MyEditText"
                android:hint="@string/birthDate"
                android:inputType="date" />

            <EditText
                android:id="@+id/contactRegistration"
                style="@style/MyEditText"
                android:hint="@string/contact"
                android:inputType="number"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"></View>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>